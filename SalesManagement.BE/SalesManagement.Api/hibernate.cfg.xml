			NHibernate.Driver.MicrosoftDataSqlClientDriver
		</property>

		<property name="connection.connection_string">
			Data Source=DESKTOP-C7UMFRB\MINHTHUAN;Initial Catalog=TestSale;User ID=sa;Password=1234567890;Encrypt=False;
			
